<?xml version="1.0" encoding="UTF-8"?>
<launch>
 <!--static tf-->
  <node pkg="tf" type="static_transform_publisher" name="laser_broadcaster" args="0.27 0 0 0 0 0 base_link laser 100" />
 <!--RPlidar-->
  <include file="$(find rplidar_filter)/launch/rplidar_view.launch" />
 <!--map-->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find amcl_test)/map/nhk2020map.yaml" />
 <!--amcl-->
 <arg name="use_map_topic" default="true"/>
 <node pkg="amcl" type="amcl" name="amcl">
  <remap from="scan" to="scan_filtered" />
  <param name="use_map_topic" value="$(arg use_map_topic)"/>
  <param name="base_frame_id" value="laser"/>
  <param name="odom_frame_id" value="odom"/>
 </node>
 <!--TRrobot-->
 <include file="$(find main_tr)/launch/main_tr.launch" />
</launch>
